<%= form_for @restaurant do |f| %>
  <div class="input-field col s6">
      <%= f.label :name, 'Name'%>
      <%= f.text_field :name%>
  </div>
  <div class="input-field col s6">
      <%= f.label :img, 'Image' %>
      <%= f.text_field :img %>
  </div>
  <%= f.submit "Submit", :class => "btn waves-effect waves-light general" %>
<% end %>