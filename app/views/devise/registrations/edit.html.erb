<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
              <h2>Edit <%= resource_name.to_s.humanize %></h2>
            <form class="form-signin">
              <div class="form-label-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
              </div><br>

              <div class="form-label-group">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true , :class => "form-control"%>
              </div><br>
              
              <div class="form-label-group">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
               <em><%= @minimum_password_length %> characters minimum</em>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %><br>
               <%= f.label :password %> <br/>
               <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
               <% if @minimum_password_length %>
               <br/>
               <% end %></div><br>
              <div class="form-label-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
              </div><br>
              <div class="form-label-group">
              <%= f.label :current_password %> <br />
              <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
              </div><br>
              <div class="actions">
              <%= f.submit "Update", :class=> "btn btn-lg btn-primary btn-block general" %>
              <h3>Cancel my account</h3>

              <p>Unhappy?<br> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn waves-effect waves-light btn btn-light general" %></p>

              <%= link_to "Back", restaurants_path %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

